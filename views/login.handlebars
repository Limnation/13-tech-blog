<div class="card">
    <div class="card-body">
        <form id="login-form">
            <div class="row mb-3">
                <label for="login-username-input" class="col-sm-2 col-form-label">Username</label>
                <div class="col-sm-10">
                <input type="email" class="form-control" id="login-username-input" placeholder="Username">
                </div>
            </div>
            <div class="row mb-3">
                <label for="login-password-input" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                <input type="password" class="form-control" id="login-password-input" placeholder="*********">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
            <a type="button" href="/signup">First time Sign up!</a>
        </form>
    </div>
</div>