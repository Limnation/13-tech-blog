<div class="card">
    <div class="card-body">
        <form id="form-signup">
            <div class="row mb-3">
                <label for="input-username-signup" class="col-sm-2 col-form-label">Username</label>
                <div class="col-sm-10">
                <input type="email" class="form-control" id="input-username-signup" placeholder="Username">
                </div>
            </div>
            <div class="row mb-3">
                <label for="input-password-signup" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                <input type="password" class="form-control" id="input-password-signup" placeholder="*********">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Signup</button>
            <a type="button" href="/signup">Already have an account login!</a>
        </form>
    </div>
</div>