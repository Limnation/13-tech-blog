<div class="card">
  {{#each posts}}
    <div class="card-body">
        <div class="card-header">
            <h2>
                <a href="/post/{{id}}">{{title}}</a>
            </h2>
            <div>
                Posted by {{username}} on {{date created}}
            </div>
        </div>
        <div class="card-body">
            {{body}}
        </div>
    </div>
  {{/each}}
</div>